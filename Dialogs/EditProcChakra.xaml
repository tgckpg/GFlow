<Page
    x:Class="GFlow.Dialogs.EditProcChakra"
    xmlns:local="using:GFlow.Dialogs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:i="using:Net.Astropenguin.UI.Icons"
    xmlns:v="using:Net.Astropenguin.UI.Converters"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <v:DataVisConverter x:Name="DataVisConverter" />
    </Page.Resources>

    <StackPanel x:Name="ScriptInput">
        <StackPanel Background="#111"
                    Visibility="{Binding ShortScript, Converter={StaticResource DataVisConverter}}">
            <TextBlock Margin="10" Text="{Binding ShortScript}" FontFamily="Consolas" />
            <Button Style="{ThemeResource TextBlockButtonStyle}"
                    HorizontalAlignment="Right" Foreground="#AAA"
                    Click="ExportScript">
                <SymbolIcon Symbol="View" />
            </Button>
        </StackPanel>
        <Button Click="OpenScript" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="Open script file" />
        </Button>
    </StackPanel>
</Page>